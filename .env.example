# InControl - Arquivo de Configuração (.env)
# Copie esse arquivo para .env e configure suas variáveis

# ======================================
# CONFIGURAÇÃO BASICA
# ======================================
NODE_ENV=production
PORT=3001
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRE=24h

# ======================================
# SUPABASE (BANCO PRINCIPAL)
# ======================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ======================================
# TELEGRAM BOT
# ======================================
TELEGRAM_TOKEN=7000000000:AAAAAAAAAAAAAAA
TELEGRAM_CHAT_ID=123456789

# ======================================
# GETS CREDENTIALS
# ======================================
GETS_EMAIL=your-email@unicamp.br
GETS_PASSWORD=your-secure-password

# ======================================
# POSTGRES LOCAL (BACKUP)
# ======================================
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=incontrol_local
POSTGRES_USER=incontrol_user
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ======================================
# REDIS CACHE
# ======================================
REDIS_PASSWORD=your-redis-password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ======================================
# MONITORAMENTO E LOGS
# ======================================
LOG_LEVEL=info
LOG_FILE=logs/incontrol.log
CACHE_DIR=cache/
BACKUP_DIR=backups/

# ======================================
# HEALTH CHECK
# ======================================
HEALTH_PORT=3001
HEALTH_HOST=localhost

# ======================================
# NOTIFICAÇÕES
# ======================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=false
TELEGRAM_NOTIFICATIONS=true

# ======================================
# BACKUP CONFIGURAÇÕES
# ======================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Cron: diariamente às 2h
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip
